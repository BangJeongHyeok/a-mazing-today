{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "sourceMap": true,
    "outDir": "dist-server"
  },
  "include": ["server/src/**/*.ts"],
  "ts-node": {
    "esm": true
  }
}
